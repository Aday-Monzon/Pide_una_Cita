{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Mis Citas
{% endblock %}

{% block body %}
    {% include "comunes/_menu.html.twig" %}
    {{ parent() }}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Fecha</th>
            <th scope="col">Hora</th>
        </tr>
        </thead>
        <tbody>
        {% for index, cita in citas  %}
            <tr>
                <th scope="row">{{ index + 1 }}</th>
                <td>{{ cita.fecha|date('d-m-Y') }}</td>
                <td>{{ cita.hora|date('H:i') }}</td>
            </tr>
        {% else %}
            <tr>
                <th colspan="3" scope="row">No se ha encontrado resultado</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}